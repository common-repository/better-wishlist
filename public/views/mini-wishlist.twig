<div class="betterwishlist-mini-cart">
    <div class="betterwishlist-mini-cart-icon">
        <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512"><path d="M225.8 468.2l-2.5-2.3L48.1 303.2C17.4 274.7 0 234.7 0 192.8v-3.3c0-70.4 50-130.8 119.2-144C158.6 37.9 198.9 47 231 69.6c9 6.4 17.4 13.8 25 22.3c4.2-4.8 8.7-9.2 13.5-13.3c3.7-3.2 7.5-6.2 11.5-9c0 0 0 0 0 0C313.1 47 353.4 37.9 392.8 45.4C462 58.6 512 119.1 512 189.5v3.3c0 41.9-17.4 81.9-48.1 110.4L288.7 465.9l-2.5 2.3c-8.2 7.6-19 11.9-30.2 11.9s-22-4.2-30.2-11.9zM239.1 145c-.4-.3-.7-.7-1-1.1l-17.8-20c0 0-.1-.1-.1-.1c0 0 0 0 0 0c-23.1-25.9-58-37.7-92-31.2C81.6 101.5 48 142.1 48 189.5v3.3c0 28.5 11.9 55.8 32.8 75.2L256 430.7 431.2 268c20.9-19.4 32.8-46.7 32.8-75.2v-3.3c0-47.3-33.6-88-80.1-96.9c-34-6.5-69 5.4-92 31.2c0 0 0 0-.1 .1s0 0-.1 .1l-17.8 20c-.3 .4-.7 .7-1 1.1c-4.5 4.5-10.6 7-16.9 7s-12.4-2.5-16.9-7z"/></svg>
        <span id="count_wishlist">{{ total_wishlist }}</span>
    </div>
    <div class="betterwishlist-mini-cart-wpappr">
        {% if products %}
        <div class="betterwishlist-mini-cart-drop">
            {% for product in products %}
            <div class="mini-drop-content" id="mini-wishlist-row-{{ product.id }}" data-row-id="{{ product.id }}">
                <a href="{{ product.url }}" target="_blank"><img src="{{ product.thumbnail_url }}"></a>
                <div class="mini-cart-title">
                    <div class="betterwishlist-title">
                        <a href="{{ product.url }}" target="_blank">{{ product.title }}</a>
                        <span>
                            {% if product.ragular_price == true and product.sale_price == true %}
                                <del aria-hidden="true">
                                    <span class="woocommerce-Price-amount amount">
                                        <bdi> <span class="woocommerce-Price-currencySymbol">{{product.currency_symbol | raw}}</span>{{ product.ragular_price }}</bdi>
                                    </span>
                                </del>
                                <ins>
                                <span class="woocommerce-Price-amount amount">
                                    <bdi><span class="woocommerce-Price-currencySymbol">{{product.currency_symbol | raw}}</span>{{ product.sale_price }}</bdi>
                                </span>
                                </ins>
                            {% endif %}

                            {% if product.ragular_price == true and product.sale_price == false %}
                                <ins>
                                    <span class="woocommerce-Price-amount amount">
                                    <bdi>
                                        <span class="woocommerce-Price-currencySymbol">{{product.currency_symbol | raw}}</span>{{ product.ragular_price }}
                                    </bdi>
                                    </span>
                                </ins>
                            {% endif %}

                            {% if product.is_variable_product %}
                                {% if product.variable_min_price == product.variable_max_price %}
                                    <ins>
                                    <span class="woocommerce-Price-amount amount">
                                        <bdi>
                                        <span class="woocommerce-Price-currencySymbol">{{product.currency_symbol | raw}}</span>{{product.variable_min_price}}
                                        </bdi>
                                    </span>
                                    </ins>
                                {% else %}
                                    <ins>
                                    <span class="woocommerce-Price-amount amount">
                                        <bdi>
                                        <span class="woocommerce-Price-currencySymbol">{{product.currency_symbol | raw}}</span>{{product.variable_min_price}} -
                                        <span class="woocommerce-Price-currencySymbol">{{product.currency_symbol | raw}}</span>{{ product.variable_max_price }}
                                        </bdi>
                                    </span>
                                    </ins>
                                {% endif %}
                            {% endif %}

                            {% if product.is_grouped_product %}
                                <ins>
                                    <span class="woocommerce-Price-amount amount">
                                    <bdi>
                                        <span class="woocommerce-Price-currencySymbol">{{product.currency_symbol | raw}}</span>{{product.group_min_price}} -
                                        <span class="woocommerce-Price-currencySymbol">{{product.currency_symbol | raw}}</span>{{product.group_max_price}}
                                    </bdi>
                                    </span>
                                </ins>
                            {% endif %}
                        </span>
                    </div>
                    <button class="close-button remove betterwishlist-remove-from-wishlist" data-product_id="{{ product.id }}">
                        <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512"><path d="M256 48a208 208 0 1 1 0 416 208 208 0 1 1 0-416zm0 464A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM175 175c-9.4 9.4-9.4 24.6 0 33.9l47 47-47 47c-9.4 9.4-9.4 24.6 0 33.9s24.6 9.4 33.9 0l47-47 47 47c9.4 9.4 24.6 9.4 33.9 0s9.4-24.6 0-33.9l-47-47 47-47c9.4-9.4 9.4-24.6 0-33.9s-24.6-9.4-33.9 0l-47 47-47-47c-9.4-9.4-24.6-9.4-33.9 0z"/></svg>
                    </button>
                </div>
            </div>
            {% endfor %}
        </div>
        <a href="{{ view_wishlist_link }}" class="btn-wishlist-view">{{ i18n.view_wishlist }}</a>
        {% else %}
            <div class="betterwishlist-mini-cart-drop">
                <div class="no-product-miniwishlist">
                {{ i18n.no_product }}
                </div>
            </div>
        {% endif %}
    </div>
</div>